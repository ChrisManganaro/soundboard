{% extends 'layout.twig' %}
{% block body %}
    <h1>
        {{title}}</h1>
    <p>Welcomesdfsdf to
        {{title}}</p>
    {% for file in files %}
        <button class="sound" onclick="playSound('{{file}}')">
            {{file}}</button>
    {% endfor %}
    <script>
    function playSound(sound){
        var url = '/api/playsound';
        var data = {sound: sound};

        fetch(url, {
          method: 'POST', // or 'PUT'
          body: JSON.stringify(data), // data can be `string` or {object}!
          headers:{
            'Content-Type': 'application/json'
          }
        }).then(res => res.json())
        .then(response => console.log('Success:', JSON.stringify(response)))
        .catch(error => console.error('Error:', error));
    }
    </script>
{% endblock %}